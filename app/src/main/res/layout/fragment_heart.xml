<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HeartFragment">

    <ImageView
        android:id="@+id/heart_red"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="500dp"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/heart_red2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="500dp"
        app:layout_constraintEnd_toEndOf="@id/heart_red"
        app:layout_constraintTop_toBottomOf="@id/heart_red"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/heart_red3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="500dp"
        app:layout_constraintEnd_toEndOf="@id/heart_red2"
        app:layout_constraintTop_toBottomOf="@id/heart_red2"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/heart_red4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="500dp"
        app:layout_constraintEnd_toEndOf="@id/heart_red3"
        app:layout_constraintTop_toBottomOf="@id/heart_red3"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/heart_red5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="500dp"
        app:layout_constraintEnd_toEndOf="@id/heart_red"
        app:layout_constraintTop_toBottomOf="@id/heart_red"
        app:srcCompat="@drawable/heart" />


    <Button
        android:id="@+id/textView1"
        android:layout_width="35dp"
        android:layout_height="70dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        android:background="@color/teal_200"
        android:text="@string/question_mark"
        android:textAlignment="center"
        android:textColor="#FFD249"
        android:textSize="50sp" />

    <Button
        android:id="@+id/textView2"
